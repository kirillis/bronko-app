.Entry-wrapper
  =component 'voter', {obj: content}
  =component 'metaInfo', {:content => content}
  -if content.kind_of? Post
    .Entry.Entry--post

      %h5.Entry-title
        =link_to content.title, content.link, class: "Entry-link"

      -unless defined? isPostTeaser
        %p.Entry-paragraph=content.text


  -if content.kind_of? Comment
    .Entry.Entry--comment
      %p.Entry-paragraph
        =content.text
    =component 'addCommentBox', {:post_id => content.post.id, :comment => content, :parent_id => content.id}

